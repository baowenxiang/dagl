@CHARSET "UTF-8";
.site-block{
	padding: 20px;
}

.site-text{
	position: relative;
}

*{
	box-sizing:inherit;
	-moz-box-sizing:inherit; /* Firefox */
	-webkit-box-sizing:inherit; /* Safari */
}
.nullClazz {
	border:1px solid red;
}





 .file-div{
    	overflow: hidden;
    	padding: 0;
    }
    .file-div>div{
		width:100%,
    	display: inline-block;
    	height: 34px;
    	line-height: 34px;
    	border: 1px solid #CCCCCC;
    	margin-bottom: 2px;
    	padding: 0 12px;
    	//text-overflow: ellipsis; 
		//white-space: nowrap; 
		//overflow: hidden;
    }
	.file-div>div>div{
		width:70%;
    	display: inline-block;
    	height: 34px;
    	line-height: 34px;
    	//border: 1px solid #CCCCCC;
    	margin-bottom: 2px;
    	//padding: 0 12px;
    	text-overflow: ellipsis; 
		white-space: nowrap; 
		overflow: hidden;
    }
	
	
    .file-div>div>div>a{
		cursor: pointer;
    	padding-left: 10px;
		text-decoration:none;
    	color: #2C6F89;
    }
    .file-div>div>div>span.file-remove{
    	cursor: pointer;
    	position: absolute;
    	right: 10px;
    }
	.file-div>div>div>span.file-download{
    	cursor: pointer;
    	position: absolute;
    	right: 35px;
    }
	
	.file-div>div>div>span.file-size{
    	position: absolute;
    	right: 60px;
    }
	
    .file-div>div>div>span.file-remove:HOVER{
    	color: #A70000;
    }
	.file-div>div>div>span.file-download:HOVER{
    	color: #A70000;
    }